<Page
    x:Class="Subsonic8.Phone.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton Icon="Setting" Label="Settings" Click="OnSettingsClick" />
            <AppBarButton Icon="Find" Label="Search" Click="OnSearchClick" />
            <AppBarButton Icon="Refresh" Label="Refresh" Click="OnRefreshClick" />
        </CommandBar>
    </Page.BottomAppBar>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="12,17,0,28">
            <TextBlock Text="SUBSONIC8" Style="{StaticResource BodyTextStyle}" />
            <TextBlock x:Name="PageTitle" Text="Albums" Style="{StaticResource HeaderTextStyle}" />
        </StackPanel>

        <!-- Content -->
        <Grid Grid.Row="1">
            <!-- Loading Indicator -->
            <ProgressRing x:Name="LoadingIndicator" 
                          IsActive="False" 
                          Width="60" Height="60" 
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Center" />

            <!-- Album List -->
            <ListView x:Name="AlbumListView"
                      ItemsSource="{Binding Albums}"
                      SelectionMode="None"
                      IsItemClickEnabled="True"
                      ItemClick="OnAlbumClick"
                      ItemContainerStyle="{StaticResource AlbumListItemStyle}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="12,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!-- Album Cover -->
                            <Border Grid.Column="0" 
                                    Width="70" Height="70" 
                                    Background="#333">
                                <Image Source="{Binding CoverArt}" 
                                       Stretch="UniformToFill" />
                            </Border>

                            <!-- Album Info -->
                            <StackPanel Grid.Column="1" 
                                        VerticalAlignment="Center" 
                                        Margin="12,0,0,0">
                                <TextBlock Text="{Binding Name}" 
                                           Style="{StaticResource TitleTextStyle}"
                                           TextTrimming="CharacterEllipsis"
                                           MaxLines="1" />
                                <TextBlock Text="{Binding Artist}" 
                                           Style="{StaticResource BodyTextStyle}"
                                           TextTrimming="CharacterEllipsis"
                                           MaxLines="1" />
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Empty State -->
            <TextBlock x:Name="EmptyStateText"
                       Text="No albums found. Please configure your server in Settings."
                       Visibility="Collapsed"
                       Style="{StaticResource BodyTextStyle}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       TextWrapping="Wrap"
                       Margin="24" />
        </Grid>
    </Grid>
</Page>
